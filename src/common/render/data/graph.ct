    case Present

    case TextureRead
    case TextureWrite

    case RenderTarget

    case BufferRead
    case BufferWrite

    case CopySource
    case CopyTarget

    case DepthRead
    case DepthWrite

    case IndexBuffer
    case VertexBuffer
}
