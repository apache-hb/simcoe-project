#ifndef CTU_EVENT
#   define CTU_EVENT(name, ...)
#endif

CTU_EVENT(VirtualMethodOnNonVirtualClass, {
    .severity = eSeverityWarn,
    .id = "REF0001",
    .brief = "virtual method on non-virtual class",
