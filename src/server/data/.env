# basic config

HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=3s
HEALTHCHECK_RETRIES=240
ORACLE_VERSION=19.3.0

ORACLE_CLIENT_HOME=/u01/app/oracle/product/${ORACLE_VERSION}/client_1
ORACLE_DB_HOME=/u01/app/oracle/product/${ORACLE_VERSION}/dbhome_1

# ntp config

NTP_HOSTNAME="ntp-timesource"
NTP_PRIVATE_IP=192.168.17.30

# storage config

STORAGE_PRIVATE_IP=192.168.17.80
NFS_STORAGE_VOLUME="./container/asm"

STORAGE_HOSTNAME="racnodedc1-storage"

# dns config

RACNODE_IMAGE_NAME="oracle/database-rac:19.3.0"
DNS_DOMAIN="elliothb.com"
