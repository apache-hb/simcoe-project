#include "resource.h"
#include "winres.h"

LANGUAGE LANG_NEUTRAL, SUBLANG_DEFAULT

IDI_DEFAULT_ICON    ICON    "@DEFAULT_ICON@"

#if SMC_BUILD_DEVEL
#   define VER_DEVEL VS_FF_PRERELEASE
#else
#   define VER_DEVEL 0
#endif

#if SMC_BUILD_PRIVATE
#   define VER_PRIVATE VS_FF_PRIVATEBUILD
#else
#   define VER_PRIVATE 0
#endif

#if SMC_DEBUG
#   define VER_DEBUG VS_FF_DEBUG
#else
#   define VER_DEBUG 0
#endif

VS_VERSION_INFO VERSIONINFO
    FILEVERSION @MAJOR@,@MINOR@,@PATCH@,@BUILD@
    PRODUCTVERSION @MAJOR@,@MINOR@,@PATCH@,@BUILD@
    FILEFLAGSMASK VS_FFI_FILEFLAGSMASK
    FILEFLAGS (VER_PRIVATE|VER_DEVEL|VER_DEBUG)
    FILEOS 0
    FILETYPE VFT_APP
    FILESUBTYPE 0
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "@COMPANY@"
            VALUE "FileDescription", "@DESCRIPTION@"
            VALUE "FileVersion", "@MAJOR@.@MINOR@.@PATCH@.@BUILD@"
            VALUE "LegalCopyright", "Â© 2024 Elliot Haisley. All right reserved."
            VALUE "ProductName", "@PRODUCT@"
            VALUE "ProductVersion", "@MAJOR@.@MINOR@.@PATCH@.@BUILD@"
#if SMC_BUILD_PRIVATE
            VALUE "PrivateBuild", "Private Build"
#endif
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x400, 1200
    END
END
